    "version": "0.2.0",
    "configurations": [
        {
            "name": "Cortex Debug",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceRoot}/build/defence_robot.elf", //where to generate executable for mcu based on makefile
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",  
            "configFiles": [
				"/usr/share/openocd/scripts/board/stm32f4discovery.cfg"//configuration file for resp mcu
                        ],
            "svdFile": "${workspaceRoot}/.vscode/STM32F407.svd",
            "interface": "swd",
            "preLaunchTask": "Build Code", //same as build label
                        "postLaunchCommands": [
                                "monitor reset halt",
                                "monitor halt",
                                "load",
                                "monitor reset halt",
                                "monitor halt",
                                "tbreak main"
                        ],
                        
                        "postDebugTask": "Build Code",
                        "postRestartCommands": [
                                "monitor reset halt",
                                "monitor halt",
                                "load",
                                "monitor reset halt",
                                "monitor halt",
                                "tbreak main"
                        ],
                        "runToMain": true,

        }
    ]
}